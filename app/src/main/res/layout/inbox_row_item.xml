<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_row"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
    android:padding="5dp"
    card_view:cardCornerRadius="10dp">

        <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dip">

        <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="0.15"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/inbox_item_image"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/profil_round_3" />
        </android.support.constraint.ConstraintLayout>

    </LinearLayout>
 <LinearLayout
     android:layout_width="0dp"
     android:orientation="vertical"
     android:layout_weight="0.75"
     android:layout_height="wrap_content"

     android:paddingLeft="@dimen/activity_horizontal_margin">

     <TextView
         android:id="@+id/inbox_item_sender"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Jahninsel Meeting"
         android:textSize="16sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/inbox_item_message"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="25.06.2018"
         android:textSize="12sp" />

     <TextView
         android:id="@+id/inbox_item_location"
         android:layout_width="328dp"
         android:layout_height="wrap_content"
         android:gravity="right"
         android:text="25.06.2018"
         android:textSize="12sp" />
 </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inbox_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:paddingTop="2dp"
            android:text="13:08"
            android:textSize="12sp" />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
