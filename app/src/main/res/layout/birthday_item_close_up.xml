<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_birthday"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_marginLeft="10dp"
    android:background="@drawable/birthday"
    android:layout_marginRight="10dp"
    android:paddingBottom="10dp"
    card_view:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_layout"
                android:layout_centerInParent="true"
                android:paddingBottom="4dp"
                android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/birthday_item_image"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="6dip"
                        android:src="@drawable/profile_round_2" />

                <TextView
                    android:id="@+id/birthday_item_name_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="5dp"
                    android:text="Matthias Sommer (36)"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/button_layout"
                android:layout_below="@id/linear_layout"
                android:layout_marginTop="125dp"
                android:layout_gravity="top">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_weight="0.5"
                    android:text="Call"
                    android:textSize="12sp"
                    android:theme="@style/PrimaryFlatButton" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="@dimen/buttonHeight"
                    android:layout_weight="0.5"
                    android:text="Send Message"
                    android:textSize="12sp"
                    android:theme="@style/PrimaryFlatButton" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
