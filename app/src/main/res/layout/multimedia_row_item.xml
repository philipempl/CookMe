<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_multimedia"
        android:layout_width="191dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        card_view:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp">

                <ImageView
                    android:id="@+id/multimedia_item_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/profile_round_3" />

                <TextView
                    android:id="@+id/multimedia_item_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/multimedia_item_image"
                    android:gravity="right"
                    android:paddingTop="5dp"
                    android:text="Philip Empl"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/multimedia_item_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:paddingTop="5dp"
                    android:text="17:08"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="8sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/view"
                    android:layout_below="@id/multimedia_item_image"
                    android:layout_marginTop="2dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:id="@+id/multimedia_item_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="Bilder Jahninsel"
                    android:textColor="#000"
                    android:textSize="12sp" />


                <ImageView
                    android:id="@+id/multimedia_item_picture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/multimedia_item_title"
                    android:layout_above="@+id/buttons"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none" />

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_weight="0.5"
                        android:text="Share"
                        android:textSize="8sp"
                        android:theme="@style/PrimaryFlatButton" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="@dimen/buttonHeight"
                        android:layout_weight="0.5"
                        android:text="Comment"
                        android:textSize="8sp"
                        android:theme="@style/PrimaryFlatButton" />


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>