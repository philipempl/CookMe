<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    app:layout_constraintVertical_bias="0.5">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_action"
        android:layout_width="191dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:paddingBottom="10dp"
        app:layout_constraintWidth_percent="0.5"
        card_view:cardCornerRadius="20dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp">

            <ImageView
                android:id="@+id/action_item_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/profile_round_3" />

            <TextView
                android:id="@+id/action_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/action_item_image"
                android:gravity="right"
                android:paddingTop="5dp"
                android:text="Philip Empl"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/action_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingTop="5dp"
                android:text="17:08"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="8sp" />

            <View
                android:layout_width="match_parent"
                android:id="@+id/view_id"
                android:layout_height="1dp"
                android:layout_below="@id/action_item_image"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />


                    <TextView
                        android:id="@+id/action_item_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="10dp"
                        android:layout_above="@+id/location_time_layout"
                        android:text="Wanna go to swim?"
                        android:textColor="#000"
                        android:textSize="16sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/location_time_layout"
                    android:layout_above="@+id/button_layout">

                    <TextView
                        android:id="@+id/action_item_time"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="17:00"
                        android:textColor="#070"
                        android:textSize="10sp" />

                    <LinearLayout
                        android:id="@+id/location_layout"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right"
                        android:padding="5dp">


                            <ImageView
                                android:id="@+id/action_item_location_image"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/location_on_grey_192x192" />


                        <TextView
                            android:id="@+id/action_item_location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WÃ¶hrdbad"
                            android:textColor="#111"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/button_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:padding="5dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Yes"
                        android:textSize="8sp"
                        android:theme="@style/PrimaryFlatButton" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="No"
                        android:textSize="8sp"
                        android:theme="@style/PrimaryFlatButton" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="0.33"
                        android:text="Other"
                        android:textSize="8sp"
                        android:theme="@style/PrimaryFlatButton" />

                </LinearLayout>
            </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />
</android.support.constraint.ConstraintLayout>